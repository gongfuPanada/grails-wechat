<plugin name='wechat' version='0.1' grailsVersion='2.0.0 &gt; *'>
  <author>Haihua Xiao</author>
  <authorEmail>hhxiao@gmail.com</authorEmail>
  <title>Grails Wechat Plugin</title>
  <description>Grails plugin provides wechat integration features.
</description>
  <documentation>https://github.com/hhxiao/grails-wechat</documentation>
  <type>WechatGrailsPlugin</type>
  <resources>
    <resource>WechatUrlMappings</resource>
    <resource>org.grails.plugin.wechat.WechatController</resource>
    <resource>org.grails.plugin.wechat.WechatCustomerService</resource>
    <resource>org.grails.plugin.wechat.WechatResponseService</resource>
    <resource>org.grails.plugin.wechat.WechatTokenService</resource>
    <resource>org.grails.plugin.wechat.internal.WechatHandlerService</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://plugins.grails.org' />
    <repository name='http://repo.grails.org/grails/plugins' url='http://repo.grails.org/grails/plugins/' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='grailsCore' url='http://svn.codehaus.org/grails/trunk/grails-plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies>
    <compile>
      <dependency group='com.google.code.gson' name='gson' version='2.3' />
    </compile>
  </dependencies>
  <plugins />
  <runtimePluginRequirements />
  <behavior />
</plugin>